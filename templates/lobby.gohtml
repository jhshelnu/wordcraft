<html lang="en">
    <head>
        <title>wordgame</title>
        <script src="/static/lobby.js"></script>
        <script>
            const lobbyId = {{ .lobbyId }};
            let gameStatus = {{ .gameStatus }};
        </script>
    </head>
    <body>
        <h5>Lobby: {{ .lobbyId }}</h5>

        <button id="start-game-button" style="display: none">Start game!</button>

        <p>Players:</p>
        <ul id="clients-list">
            {{range .clientIds}}
                <li data-client-id="{{.}}">{{.}}</li>
            {{end}}
        </ul>

        <div id="challenge-input-section" style="display: none">
            <label for="answer-input">Make a word with <span id="challenge-text"></span>:</label>
            <input type="text" id="answer-input">
            <button type="submit" id="submit-answer">Submit answer</button>
        </div>

    </body>
</html>